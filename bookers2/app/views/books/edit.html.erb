<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <form>
        <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, autofocus: true, id:"booktitle", placeholder:""%>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label>
          <%= f.text_field :body, autofocus: true, id:"bookbody", placeholder:""%>
        </div>
          <%= f.submit "Update User", class:"btn btn-success" %>
        <% end %>
        </form>
        <%= link_to "Show", @book %> |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>